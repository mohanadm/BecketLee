
@model BecketLee.Models.DeletionModel


@using (Html.BeginForm( actionName: @Model.Action, controllerName: @Model.Controller, routeValues: 
    new {@deleteId = @Model.DeleteId, @userDeleteId = @Model.UserDeleteId, @roleDeleteId=@Model.RoleDeleteId }, method: FormMethod.Post ) )
{ 
    @Html.AntiForgeryToken()

    <div class="modal" id="confirmDeletion">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="text-center">@Model.Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <h5 class="text-center text-warning">
                        Are you sure that you want to delete this @Model.Item?<br />
                        "@Model.Title"
                    </h5>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Cancel</button>
                </div>
            </div>


        </div>
    </div>
}