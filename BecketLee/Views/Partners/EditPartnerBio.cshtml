@model BecketLee.ViewModels.PartnerViewModel
@{
    ViewBag.Title = "Edit Bio";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script language="javascript">
        CKEDITOR.replace('BiographyHtml');
    </script>
    <script src="~/js/ckEditorValidation.js"></script>

}


<div class="container-fluid">
    <form asp-action="EditPartnerBio" asp-controller="Partners" method="post" id="editPartnerBioForm" name="editPartnerBioForm" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <br/>

        <div class="row">
            <div class="col-7">
                <div class="row">
                    <label asp-for="PartnerName">Name</label>
                    <input asp-for="PartnerName" class="form-control" />
                    <span asp-validation-for="PartnerName"></span>
                </div>
                <div class="row">
                    <label asp-for="BiographyHtml">Biography</label>
                    <textarea type="text" asp-for="BiographyHtml" name="BiographyHtml" id="BiographyHtml" class="form-control"></textarea>
                    <span asp-validation-for="BiographyHtml"></span>
                </div>
                <div class="row">
                    <input asp-for="PartnerId" type="hidden" />
                    <input asp-for="FileName" type="hidden" />
                    <input asp-for="FileUrl" type="hidden" />
                </div>
            </div>
            <div class="container col pull-right">
                <div class="row">
                    <label class="mx-auto" asp-for="File">Photo Upload</label>
                    <input class="mx-auto" asp-for="File"/>
                </div>

                <div class="row">
                    <img src="@Model.FileUrl" alt="@Model.PartnerName" class="partnerImage" asp-append-version="true" />
                </div>
                <div class="row">
                    <label class="mx-auto" asp-for="FileName">@Model.FileName</label>
                </div>
                <div class="row">
                    <a asp-controller="Partners" asp-action="ManagePartners" class="btn btn-sm btn-default mx-auto">Cancel</a>
                    <input type="submit" class="btn btn-sm btn-success mx-auto" value="Save" />
                </div>
            </div>
        </div>
    </form>
</div>