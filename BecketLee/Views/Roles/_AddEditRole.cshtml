@model BecketLee.ViewModels.RoleViewModel


@using (Html.BeginForm(actionName: "AddEditRole", controllerName: "Roles", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal" id="addEditRole">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    @if (Model.Id is null)
                    {
                        <h4 class="text-center">Add Role</h4>
                    }
                    else
                    {
                        <h4 class="text-center">Edit Role</h4>
                    }
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-success">Save</button>
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Cancel</button>
                </div>
            </div>


        </div>
    </div>
}