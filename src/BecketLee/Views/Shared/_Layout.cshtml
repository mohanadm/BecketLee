<body>
    <div id="full-content">
        <div id="main-window">
            <div id="header">

                <div class="image-container">
                    <div class="image-item"><img src="~/image/headerLogo.gif" alt="Becket & Lee Logo" class="logoImage" /></div>
                    <div class="image-item"><img src="~/image/B&L Firm-small2.jpg" alt="Offices" class="headerImage" /></div>
                    <div class="image-item"><img src="~/image/InLibrary225.jpg" alt="Library" class="headerImage"></div>
                    <div class="image-item"><img src="~/image/DSC_9999editSM.JPG" alt="Offices" class="headerImage" /></div>
                    <div class="image-item"><img src="~/image/DSC_9925edit2SM.JPG" alt="Computer Room" class="headerImage" /></div>
                </div>

                <nav class="navbar navbar-default bg-dark">
                    <ul class="navbar navbar-nav mx-auto">
                        <li class="navtext">
                            Your Proven Partner in Bankruptcy Management
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="navtext">
                                &nbsp;-&nbsp;Welcome: @User.Identity.Name
                            </li>
                            @*<ul class="navbar navbar-nav ml-auto"></ul>*@
                        }

                    </ul>
                </nav>
            </div>
            <div id="sidebar">

                <nav class="navbar navbar-dark bg-dark" id="menu">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item dropdown">
