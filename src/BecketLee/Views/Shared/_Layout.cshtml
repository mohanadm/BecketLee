                                @await Html.PartialAsync("_partnerMenuView", (PartnerMenuViewModel)ViewBag.MenuModel)
                            </div>
                        </li>

                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Home" asp-action="OurServices"> Services </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Events" asp-action="News"> News </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Events" asp-action="Events"> Events </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Events" asp-action="Pubs"> Publications </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Events" asp-action="Cases"> Cases of Interest </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Home" asp-action="FirmHistory"> Firm History </a></li>
                        <li class="nav-item" href="#"><a class="nav-link" asp-controller="Home" asp-action="Contact"> Contact </a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Index">Manage Website</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout"> <i class="fa fa-sign-out"></i> Logout</a></li>
                        }
                    </ul>
                </nav>

                <div>&nbsp;</div>
                <div class="affiliation">
                    <table>
                        <tr>
                            <td>
                                <img src="~/image/WBE_color_rgb_UP25.jpg" alt="" class="affiliationImage" />
                            </td>
                        </tr>
                    </table>
                </div>

                <div>
                    <ul class="businessAddress">
                        <li>&nbsp;</li>
                        <li>Becket & Lee LLP</li>
                        <li>16 General Warren Blvd</li>
                        <li>Malvern, PA 19355</li>
                        <li>&nbsp;</li>
                        <li>610.644.7800</li>

